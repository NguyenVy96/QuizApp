<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/app_name_color"
        android:textSize="@dimen/app_name_text_size"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/login_cardView_margin_side"
        android:layout_marginTop="@dimen/login_cardView_margin_top"
        android:layout_marginRight="@dimen/login_cardView_margin_side"
        android:background="@color/login_cardView_color"
        app:cardCornerRadius="@dimen/login_cardView_corner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/login_cardView_padding">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="@color/welcome_color"
                android:textSize="@dimen/login_cardView_welcome_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_insert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_cardView_element_margin_top"
                android:text="@string/insert_name"
                android:textColor="@color/insert_name_color"
                android:textSize="@dimen/login_cardView_insert_name_text_size" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/login_cardView_element_margin_top"
                    android:hint="@string/name"
                    android:textSize="@dimen/login_cardView_name_text_size" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_cardView_element_margin_top"
                android:text="@string/start"
                android:textSize="@dimen/login_cardView_name_text_size" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>